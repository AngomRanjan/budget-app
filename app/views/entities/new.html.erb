<section class="text-center vh-100">
    <div class="header d-flex align-items-center justify-content-between px-4">
        <%= link_to :back do %>
            <i class="fa fa-arrow-left text-white"></i>
        <%end%>
        <h4 class="text-white">New Transaction</h4>
    </div>

    <div class="mx-2">
        <%= form_with model: @entity do |f| %>
            <div class="my-3 px-3">
                <%= f.text_field :name, placeholder: "Expense Name", require: true, class: 'w-100 bg-gray-100 p-2' %>
            </div>
            <div class="my-3 px-3">
                <%= f.number_field :amount, in: 1.0..1000.0, step: 0.5, placeholder: "Amount", require: true, class: 'w-100 bg-gray-100 p-2' %>
            </div>
            <div class="my-3 px-3">
                <%= f.collection_select :group_id, @groups, :id, :name,:prompt => true, require: true, class: 'w-100 bg-gray-100 p-2'  %>
            </div>
            <div class="form-group">
                <%= f.submit "Submit", class: "btn btn-primary px-4"%>
            </div>
        <% end %>
    </div>

</section>
