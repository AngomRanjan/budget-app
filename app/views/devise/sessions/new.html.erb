<section class="text-center">
  <div class="text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="bg__prime d-flex align-items-center justify-content-between px-4 py-2">
        <%= link_to root_path do %>
          <i class="fa fa-arrow-left text-white"></i>
        <%end%>
        <%= f.submit "Log In", class: "btn text-white" %>
      </div>

      <div class="my-3 px-3">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "w-100 bg-gray-100 p-2" %>
      </div>

      <div class="my-3 px-3">
        <%= f.password_field :password, placeholder: "Password",autocomplete: "current-password", class: "w-100 bg-gray-100 p-2" %>
      </div>          
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</section>