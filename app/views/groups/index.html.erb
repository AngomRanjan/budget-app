
<section class="text-center vh-100">
    <div class="bg-primary d-flex align-items-center justify-content-between px-4">
        <div>
            <%= render "shared/navbar" %>
        </div>
        <h4 class="text-white"><%= link_to "Add a category", new_group_path, class: "text-white" %></h4>
    </div>
   

    <% if flash.notice %>
        <p class="notice"><%= notice %></p>
    <% end %>

    <div class="">
        <% if @groups.any?%>
            <% @groups.each do |group| %>
                <%= render group %>
            <% end %>
        <% else %>
            <p class="p-2 m-2 h3">There is no category added!!!</p>
        <% end %>            
    </div>

    <div class="footer fixed-bottom py-4">        
        <% if user_signed_in? %> 
           <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn main-color" %>
        <% end %>
    </div>
       
</section>
